{
  "$schema": "http://json-schema.org/draft-07/schema",
  "type": "object",
  "properties": {
    "auto_start": {
      "title": "Auto Start",
      "description": "Automatically start benchmarking",
      "type": "boolean",
      "default": true
    },
    "warmup_iterations": {
      "title": "Warmup Iterations",
      "description": "Number of warmup iterations",
      "type": "integer",
      "default": 5,
      "minimum": 0
    },
    "measurement_iterations": {
      "title": "Measurement Iterations",
      "description": "Number of measurement iterations",
      "type": "integer",
      "default": 5,
      "minimum": 2
    },
    "time": {
      "title": "Time",
      "description": "Duration of iterations in seconds",
      "type": "integer",
      "default": 10,
      "minimum": 1
    },
    "forks": {
      "title": "Forks",
      "description": "Number of forks",
      "type": "integer",
      "default": 5,
      "minimum": 1
    },
    "time_unit": {
      "title": "Time Unit",
      "description": "Output time unit",
      "type": "string",
      "default": "s",
      "enum": [
        "ns",
        "us",
        "ms",
        "s",
        "m"
      ]
    },
    "mc": {
      "title": "Minecraft",
      "description": "Path to Minecraft server",
      "type": "string",
      "default": "server.jar"
    },
    "output": {
      "title": "Output",
      "description": "Output file name without extension",
      "type": "string",
      "default": "mch-results"
    },
    "formats": {
      "title": "Formats",
      "description": "Output formats",
      "type": "array",
      "items": {
        "type": "string",
        "enum": [
          "json",
          "md"
        ]
      },
      "default": []
    },
    "jvm_args": {
      "title": "JVM Arguments",
      "description": "JVM arguments to use with forks",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "mc_args": {
      "title": "Minecraft Arguments",
      "description": "Minecraft arguments to use with forks",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": [
        "nogui"
      ]
    },
    "parsing_benchmarks": {
      "title": "Parsing Benchmarks",
      "description": "Commands for parsing benchmark",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "execute_benchmarks": {
      "title": "Execute Benchmarks",
      "description": "Commands for execute benchmark",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "function_benchmarks": {
      "title": "Function Benchmarks",
      "description": "Data pack names for function benchmark",
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    }
  }
}
